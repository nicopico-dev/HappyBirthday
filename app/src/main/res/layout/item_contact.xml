<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:rowCount="2"
    android:padding="@dimen/space_small">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="@dimen/avatar_thumbnail"
        android:layout_height="@dimen/avatar_thumbnail"
        android:layout_rowSpan="2"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription"
        tools:background="#00F"/>

    <android.support.v4.widget.Space
        android:layout_width="@dimen/space_small"
        android:layout_rowSpan="2"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItem"
        tools:text="Nicolas PICON"/>

    <TextView
        android:id="@+id/txtInfos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        tools:text="10 juin 1980"
        tools:visibility="visible"/>

</GridLayout>